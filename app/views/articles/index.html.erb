<div class="index">
  <div class="head">
    <h1>Posts</h1>
    <%= link_to "New Article", new_article_path %>
  </div>

  <% @articles.each do |article| %>
    <div class="article">
      <%= link_to article.title, article %>
      <div class="comment-count">
        <%= article.comments.size %> Comments
      </div>
    </div>
  <% end %>
</div>
