<div class="comment-form">
  <%= form_with model: [ @article, @article.comments.build ] do |form| %>
    <div class="name">
      <%= form.label :commenter %>
      <%= form.text_field :commenter %>
    </div>

    <div class="body">
      <%= form.label :body %>
      <%= form.text_area :body %>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>